#!/usr/bin/env ruby

 require_relative '../lib/turn'
board  = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
px = "X"
po = "O"
puts "Welcome to Tic Tac Toe!"
display_board(board)
10.times do
xmove = gets.strip.to_i - 1
input_to_index(xmove)
until valid_move?(board, xmove)
  xmove = gets.strip.to_i - 1
  input_to_index(xmove)
end
turn(board, xmove, px)
omove = gets.strip.to_i - 1
input_to_index(omove)
until valid_move?(board, omove)
  omove = gets.strip.to_i - 1
  input_to_index(omove)
end
turn(board, omove, po)
end
